@model MyBase.WEB.Models.IndexViewModel
@using MyBase.WEB.Helpers
@{
    ViewBag.Title = "View";
}

<table class="table">

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @if (item.Image != null)
                {
                    @Html.Raw("<img style='width:200px;' src=\"data:image/jpeg;base64,"
          + Convert.ToBase64String(item.Image) + "\" />")
                }
                else
                {
                    <img  style='width:200px; margin: 20px' src="/no.jpg">
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Открыть", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
@if (Model.PageInfo.TotalItems > Model.PageInfo.PageSize)
{
    <div class="btn-group">
        @if (Model.PageInfo.PageNumber > 1)
        {
            <a class="btn btn-default" href="/?page=1&size=@Model.PageInfo.PageSize"> << </a>
            <a class="btn btn-default" href="/?page=@(Model.PageInfo.PageNumber - 1)&size=@Model.PageInfo.PageSize"> < </a>
        }
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x, size = Model.PageInfo.PageSize }))
        @if (Model.PageInfo.PageNumber < Model.PageInfo.TotalPages)
        {
            <a class="btn btn-default" href="/?page=@(Model.PageInfo.PageNumber + 1)&size=@Model.PageInfo.PageSize"> > </a>
            <a class="btn btn-default" href="/?page=@(Model.PageInfo.TotalPages)&size=@Model.PageInfo.PageSize"> >> </a>
        }
    </div>
    <div class="btn-group" style="position:absolute; right:100px;">
        <header style="margin:5px;">Выводить по</header>
        <a class="btn btn-default" href="/?size=10"> 10 </a>
        <a class="btn btn-default" href="/?size=25"> 25 </a>
        <a class="btn btn-default" href="/?size=100"> 100 </a>
    </div>
}




